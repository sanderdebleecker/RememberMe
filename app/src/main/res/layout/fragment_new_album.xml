<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_new_album"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="be.sanderdebleecker.herinneringsapp.NewAlbumFragment">
    <!-- PercentRelativeLayout does not fully support the support.toolbar dimensions -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/new_album_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/new_album_txtilTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_album_etxtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text"
            android:hint="@string/title">
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_album_txtilSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_album_txtilTitle"
    >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/new_album_etxtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="center"
            android:hint="@string/search_hint">
        </android.support.design.widget.TextInputEditText>
    </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/new_album_txtilSearch"
        android:id="@+id/new_album_recyclerview"
        app:layout_heightPercent="60%"
        android:layout_width="match_parent"
        />

</android.support.percent.PercentRelativeLayout>
