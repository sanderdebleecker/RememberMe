<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="25dp"
    tools:context="be.sanderdebleecker.herinneringsapp.RegisterFragment">
    <!--Knoppen-->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtvRegistreer"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registreer"
        android:textSize="42sp"
        android:textAlignment="center"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/register_pager"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/txtvRegistreer"
        android:layout_width="match_parent"
        app:layout_heightPercent="60%"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/register_pager_indicator"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/register_pager"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:gravity="center"
        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_alignParentBottom="true"
        app:layout_widthPercent="40%"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_margin="32dp"
        android:text="@string/Register"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:background="@drawable/border_button"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnCancel"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnRegister"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_button"
        android:layout_margin="32dp"
        android:padding="12dp"
        app:layout_widthPercent="40%"
        app:layout_marginRightPercent="5%"
        app:layout_marginLeftPercent="5%"
        android:text="@string/Cancel"
        />
</android.support.percent.PercentRelativeLayout>
